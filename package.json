{
  "name": "relaxnative",
  "version": "0.1.1",
  "type": "module",
  "description": "Zero-config native C/C++/Rust execution for Node.js",
  "license": "MIT",
  "author": "Ravi Kishan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ravikisha/RelaxNative.git"
  },
  "bugs": {
    "url": "https://github.com/Ravikisha/RelaxNative/issues"
  },
  "homepage": "https://github.com/Ravikisha/RelaxNative#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./loader": {
      "types": "./dist/esmLoader.d.ts",
      "default": "./dist/esmLoader.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "relaxnative": "dist/cli.js"
  },
  "files": [
    "dist/**",
    "native/**",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts src/worker/workerEntry.ts src/worker/processEntry.ts src/esmLoader.ts src/memory/memory.selftest.ts --format esm --dts",
  "test": "vitest --run --pool=threads --maxWorkers=1",
  "test:inband": "vitest --run --pool=threads --maxWorkers=1",
  "test:native": "vitest --run --pool=threads --maxWorkers=1 src/memory/memory.test.ts",
    "selftest:memory": "npm run build && node dist/memory/memory.selftest.js",
    "prepack": "npm run build",
    "release:beta": "npm publish --tag beta",
    "lint": "eslint src",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=18 <26"
  },
  "keywords": [
    "ffi",
    "native",
    "c",
    "cpp",
    "rust",
    "bindings",
    "node",
    "worker_threads",
    "security",
    "sandbox"
  ],
  "dependencies": {
    "koffi": "^2.15.1",
    "tree-sitter": "0.22.4",
    "tree-sitter-c": "0.23.6",
    "tree-sitter-cpp": "0.23.4",
    "tree-sitter-rust": "0.24.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
